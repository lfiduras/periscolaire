{# src/AppBundle/Resources/views/activite/index.html.twig #}

{% extends "AppBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Liste des activit√©s{% endblock %}

{% block content %}
  
	{% for niveau in toutesLesClasses %}
	
<div class="row">	
	<div class="col-md-10 niveau">{{ niveau.libelle }}</div>
	<div class="col-md-2 niveau"><a class="btn-xs btn-success" aria-label="Left Align" href="{{ path('ActiviteAjouter', {'niveau': niveau.id}) }}">
	  		<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
		</a></div>
</div>

		{% for activite in niveau.activites %}
<div class="row">
	<div class="col-md-6">{{ activite.libelle }}</div>		
	<div class="col-md-2">{{ 'activite.nbplaces'|transchoice(activite.nbPlaces) }}</div>
	<div class="col-md-2">{{ ('parametrage.jour.' ~ activite.jour)|trans }}</div>
	<div class="col-md-2">
		<a class="btn-xs btn-default" aria-label="Left Align" href="{{ path('ActiviteModifier', {'id' : activite.id} ) }}">
	  		<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
		</a>
		<a class="btn-xs btn-notice" aria-label="Left Align" href="{{ path('ActiviteCopier', {'id' : activite.id} ) }}">
	  		<span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span>
		</a>
		<a class="btn-xs btn-danger" aria-label="Left Align" href="{{ path('ActiviteSupprimer', {'id' : activite.id} ) }}">
	  		<span class="glyphicon glyphicon-remove" aria-hidden="true" ></span>
		</a>
	</div>	
</div>
		{% endfor %}
	{%endfor%} 
{% endblock %}